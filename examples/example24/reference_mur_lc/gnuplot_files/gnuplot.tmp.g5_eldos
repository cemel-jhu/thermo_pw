set encoding iso_8859_15
set terminal postscript enhanced solid color "AvantGarde-Book" 20
set output "output_eldos.g5.ps"

set key off
xscale=       1.000000
xshift=0.0
xmin=      -3.843837
xmax=      45.023681
set xrange [xmin*xscale-xshift:xmax*xscale-xshift]
ymin=       0.000000
ymax=       1.114800
set yrange [ymin:ymax]
set border lw 2
eref=0.0
fact=1.0
gfact=1.0
point_size=1.0
color_red="red"
color_green="green"
color_blue="blue"
color_cyan="cyan"
color_magenta="magenta"
color_gold="gold"
color_pink="pink"
color_black="black"
color_olive="olive"
color_brown="brown"
color_gray="gray"
color_light_blue="light-blue"
color_orange="orange"
color_yellow="yellow"
set ylabel "dos (states / (eV cell))"
 set xlabel "Energy (eV)"
plot_width=2
set arrow from       8.28000,      0.00000 to       8.28000,      1.11480 nohead lw 2
set label "E_F" at      8.69400,      1.02562
plot  "therm_files/output_eldos.dat.g5" u ($1*xscale-xshift):($2*fact-eref)*gfact w l lw 3 lc rgb color_red
set ylabel "Integrated dos (states / cell)"
set yrange[     0.000000:    26.400000]
unset arrow
unset label
set arrow from xmin*xscale-xshift,      3.0000 to xmax*xscale-xshift,      3.0000 nohead front lw   3 lc rgb color_black
plot  "therm_files/output_eldos.dat.g5" u ($1*xscale-xshift):($3*fact-eref)*gfact w l lw 3 lc rgb color_blue
